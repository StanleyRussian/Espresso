<UserControl x:Class="ModernUI.Pages.Statistics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:statistic="clr-namespace:ModernUI.Pages.Statistic"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Header="Счета"
                     controls:ControlsHelper.HeaderFontWeight="Light"
                     controls:ControlsHelper.HeaderFontSize="16">
                <statistic:AccountsParent/>
            </TabItem>
            <TabItem Header="Поставщики"
                     controls:ControlsHelper.HeaderFontWeight="Light"
                     controls:ControlsHelper.HeaderFontSize="16">
            </TabItem>
            <TabItem Header="Сорта кофе"
                     controls:ControlsHelper.HeaderFontWeight="Light"
                     controls:ControlsHelper.HeaderFontSize="16">
            </TabItem>
            <TabItem Header="Закупки"
                     controls:ControlsHelper.HeaderFontWeight="Light"
                     controls:ControlsHelper.HeaderFontSize="16">
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
