<UserControl x:Class="UI.Pages.Statistics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:accounts="clr-namespace:UI.Pages.Statistic.Accounts"
             xmlns:coffeeSorts="clr-namespace:UI.Pages.Statistic.CoffeeSorts"
             xmlns:coffeeSortsVM="clr-namespace:ViewModels.Statistics.CoffeeSorts;assembly=ViewModels"
             xmlns:accountsVM="clr-namespace:ViewModels.Statistics.Accounts;assembly=ViewModels"
             xmlns:suppliersVM="clr-namespace:ViewModels.Statistics.Suppliers;assembly=ViewModels"
             xmlns:suppliers="clr-namespace:UI.Pages.Statistic.Suppliers"
             xmlns:coffeePurchasesVM="clr-namespace:ViewModels.Statistics.CoffeePurchases;assembly=ViewModels"
             xmlns:coffeePurchases="clr-namespace:UI.Pages.Statistic.CoffeePurchases">
    <Grid>
        <TabControl ItemsSource="{Binding StatisticTabs, Mode=TwoWay}">
            <TabControl.Resources>
                <DataTemplate DataType="{x:Type accountsVM:ParentAccountsViewModel}">
                    <accounts:ParentAccounts/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type coffeeSortsVM:ParentCoffeeSortsViewModel}">
                    <coffeeSorts:ParentCoffeeSorts/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type suppliersVM:ParentSuppliersViewModel}">
                    <suppliers:ParentSuppliers/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type coffeePurchasesVM:ParentCoffeePurchasesViewModel}">
                    <coffeePurchases:ParentCoffeePurchases/>
                </DataTemplate>
            </TabControl.Resources>

            <TabControl.ItemContainerStyle>
                <Style BasedOn="{StaticResource MetroTabItem}" TargetType="TabItem">
                    <Setter Property="Header" Value="{Binding Header}" />
                    <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
                    <Setter Property="controls:ControlsHelper.HeaderFontSize" Value="18"/>
                </Style>
            </TabControl.ItemContainerStyle>
        </TabControl>
    </Grid>
</UserControl>
