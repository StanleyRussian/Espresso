<UserControl x:Class="UI.Pages.Explore.CoffeeTranfers.IndividualCoffeeTransfer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <WrapPanel Margin="0,5,0,0">
            <TextBlock Style="{StaticResource Header3}">Дата перевода:</TextBlock>
            <TextBlock Margin="5,0,0,0" Text="{Binding Date}" Style="{StaticResource Header2Accent}"/>
        </WrapPanel>

        <WrapPanel Margin="0,5,0,0">
            <TextBlock Style="{StaticResource Header3}">Количество:</TextBlock>
            <TextBlock Margin="5,0,0,0" Text="{Binding Quantity}" Style="{StaticResource Header2Accent}"/>
        </WrapPanel>

        <WrapPanel Margin="0,5,0,0">
            <TextBlock Style="{StaticResource Header3}">Купаж:</TextBlock>
            <TextBlock Margin="5,0,0,0" Text="{Binding Mix.Name}" Style="{StaticResource Header2Accent}"/>
        </WrapPanel>
    </StackPanel>
</UserControl>
