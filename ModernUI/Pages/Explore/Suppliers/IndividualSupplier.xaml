<UserControl x:Class="UI.Pages.Explore.Suppliers.IndividualSupplier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <StackPanel >
        <TextBlock Style="{StaticResource Title}" Text="{Binding Name}"
                   TextWrapping="Wrap"/>

        <WrapPanel Margin="0,5,0,0">
            <TextBlock Style="{StaticResource Header3}">Телефон:</TextBlock>
            <TextBlock Style="{StaticResource Header3Accent}" Margin="5,0,0,0" Text="{Binding Contact}"/>
        </WrapPanel>

        <WrapPanel Margin="0,5,0,0">
            <TextBlock Style="{StaticResource Header3}">Контактное лицо:</TextBlock>
            <TextBlock Style="{StaticResource Header3Accent}" Margin="5,0,0,0" Text="{Binding ContactPerson}"/>
        </WrapPanel>

        <WrapPanel Margin="0,5,0,0">
            <TextBlock Style="{StaticResource Header3}">Адрес:</TextBlock>
            <TextBlock Style="{StaticResource Header3Accent}" Margin="5,0,0,0" 
                       Text="{Binding Adress}" TextWrapping="Wrap"/>
        </WrapPanel>

        <Separator Margin="0,5,0,0"/>

        <TextBlock Style="{StaticResource Header3}" Margin="0,5,0,0">Описание:</TextBlock>
        <TextBlock Style="{StaticResource Header3}" Margin="0,5,0,0"
                   Text="{Binding Description}" TextWrapping="Wrap"/>
    </StackPanel>

</UserControl>
