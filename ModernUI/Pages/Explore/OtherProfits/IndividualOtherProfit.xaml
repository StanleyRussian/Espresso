<UserControl x:Class="UI.Pages.Explore.OtherProfits.IndividualOtherProfit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <WrapPanel Margin="0,5,0,0">
            <TextBlock Style="{StaticResource Header3}">Дата перевода:</TextBlock>
            <TextBlock Margin="5,0,0,0" Text="{Binding Date}" Style="{StaticResource Header3Accent}"/>
        </WrapPanel>

        <WrapPanel Margin="0,5,0,0">
            <TextBlock Style="{StaticResource Header3}">Сумма:</TextBlock>
            <TextBlock Margin="5,0,0,0" Text="{Binding Sum}" Style="{StaticResource Header3Accent}"/>
        </WrapPanel>

        <WrapPanel Margin="0,5,0,0">
            <TextBlock Style="{StaticResource Header3}">С какого счёта:</TextBlock>
            <TextBlock Margin="5,0,0,0" Text="{Binding Account.Name}" Style="{StaticResource Header3Accent}"/>
        </WrapPanel>

        <WrapPanel Margin="0,5,0,0">
            <TextBlock Style="{StaticResource Header3}">Назначение:</TextBlock>
            <TextBlock Margin="5,0,0,0" Text="{Binding Designation}" Style="{StaticResource Header3Accent}"/>
        </WrapPanel>
    </StackPanel>
</UserControl>
