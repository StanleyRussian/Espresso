<UserControl x:Class="UI.Controls.Combo.ComboActiveSuppliers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:core="clr-namespace:Model;assembly=Model"
             mc:Ignorable="d">
    <Grid Margin="{StaticResource ControlMargin}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="ComboBox" ItemsSource="{Binding Source={x:Static core:ContextManager.ActiveSuppliers}}"
                  SelectedItem="{Binding Supplier}" DisplayMemberPath="Name" SelectedValue="Id" Width="auto"/>

        <Button Grid.Column="1" Click="New" Content="Новый" Margin="5,0,0,0"/>
    </Grid>

</UserControl>