<UserControl x:Class="ModernUI.Controls.Combo.ComboActivePackedCategories"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:Core;assembly=Core">
    
    <Grid Margin="{StaticResource ControlMargin}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="ComboBox" ItemsSource="{Binding Source={x:Static core:ContextManager.ActivePackedCategories}}"
                  SelectedItem="{Binding Mix}" DisplayMemberPath="Name" SelectedValue="Id" Width="auto"/>

        <Button Grid.Column="1" Click="New" Content="Новый" Margin="5,0,0,0"/>
    </Grid>
</UserControl>
